# 服务器配置
PORT=3000
NODE_ENV=production

# 数据库配置 - 使用PlanetScale或其他云数据库
DB_HOST=aws.connect.psdb.cloud
DB_PORT=3306
DB_USER=your_planetscale_username
DB_PASSWORD=your_planetscale_password
DB_NAME=unitpay
DB_SSL=true

# JWT密钥
